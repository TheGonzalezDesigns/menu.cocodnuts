$standardWidth = 18vmax
#view
	.image
		max-height $standardWidth
		max-width @max-height
		flex-grow 2
	.list
		max-height 50vh
		overflow-y auto
		.panel-block
			&:nth-of-type(2n+1)
				.box
					background darken(white, 2%)
	.sorts
		background-color lighten(beige, 60%)
		background-image linear-gradient(to bottom, #f5f5f5, #fff)
		text-transform capitalize
	.column
		//max-width $standardWidth
		text-align center
		//max-width @width
		text-overflow ellipsis
		text-transform capitalize
	.columns
		align-content stretch
		flex-wrap wrap
		margin 0
	.column
		margin 0
		padding 0
	#sortby
		align-self center
		display flex
		align-items center
		justify-content center
		@media (max-width: 500px)
			display none
	.arrow-up
	.arrow-down
		background-position center center
		background-repeat no-repeat
		min-height 3vmin
		min-width @min-height
		background-image url('../graphics/icons/chevrons-down.svg')
		background-size @min-width
		transition all 0.2s linear
	.arrow-up
		transform rotateX(180deg)
	.tabs
		max-width 85vmin
		overflow auto !important
		a
			justify-content space-between
			padding 1vmin 0
			line-height 110%
		.icon
			margin 0
	*
		font-size responsive
		flex-grow 1
	.panel-block
		//padding: 0.5em 0.5em;
		padding: 0;
	.is-one-quarter
		flex-basis: 25%;
	.data
		display flex
		justify-content center
		text-align center
		align-content center
		align-items center
		padding 1vmin
		flex-direction column
		h3
			width 100%

